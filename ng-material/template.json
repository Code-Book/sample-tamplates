{
    "name": "Angular - Material Module",
    "author": "Sanchit Gupta",
    "email": "gupta.sanchit90@gmail.com",
    "version": "1.0.0",
    "description": {
        "short": "Generate Module for Angular Material",
        "long": "Generate Module for Angular Material"
    },
    "languages": [
        "Javascript",
        "Typescript"
    ],
    "frameworks": [
        "Angular 6",
        "Angular Material"
    ],
    "tags": [
        "Angular",
        "ng",
        "Material"
    ],
    "parameters": [
        {
            "type": "input",
            "name": "distFolder",
            "subType": "dir",
            "title": "Destination Folder",
            "message": "Absolute directory path, leave blank to use default directory"
        }
    ],
    "actions": [
        {
            "type": "add",
            "path": "{{__destinationDir distFolder}}/app-material.module.ts",
            "templateFile": "{{__templatePath}}/_app-material.module.ts"
        }
    ]
}